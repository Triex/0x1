#!/bin/sh

# 0x1 Direct Executor
# This script directly calls the 0x1 binary without relying on PATH

# Get the user's home directory
HOME_DIR="$HOME"

# Direct path to the 0x1 binary
BIN_PATH="$HOME_DIR/.bun/bin/0x1"

if [ -f "$BIN_PATH" ]; then
  # Execute with all arguments
  exec "$BIN_PATH" "$@"
else
  # Fallback to bunx if direct execution fails
  echo "\033[33mDirect binary not found, falling back to bunx...\033[0m"
  exec bunx 0x1 "$@"
fi
